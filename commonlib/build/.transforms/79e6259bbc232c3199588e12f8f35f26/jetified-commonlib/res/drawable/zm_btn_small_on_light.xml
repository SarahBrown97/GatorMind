<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle" >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="@color/zm_transparent"
                />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/zm_white"
                />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="@color/zm_transparent"
                />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/zm_white"
                />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="@color/zm_transparent"
                />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp"
                />
            <stroke
                android:width="2dp"
                android:color="@color/zm_white"
                />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="@color/zm_transparent"
                />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/zm_white"
                />
        </shape>
    </item>
</selector>

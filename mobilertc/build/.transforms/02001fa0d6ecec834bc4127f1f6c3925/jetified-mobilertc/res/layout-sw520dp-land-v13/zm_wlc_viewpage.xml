<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/zm_margin_small"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/zm_margin_small"
        android:gravity="center"
        android:text="@string/zm_lbl_wlc_title1_90302"
        android:textColor="@color/zm_v2_txt_primary"
        android:textSize="@dimen/zm_ui_kit_text_size_20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/zm_margin_small"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/zm_margin_small"
        android:gravity="center"
        android:text="@string/zm_lbl_wlc_content1_90302"
        android:textColor="@color/zm_v2_txt_primary"
        android:textSize="@dimen/zm_ui_kit_text_size_15sp" />

    <ImageView
        android:id="@+id/wlcImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/zm_wlc_page_index1" />

</RelativeLayout>
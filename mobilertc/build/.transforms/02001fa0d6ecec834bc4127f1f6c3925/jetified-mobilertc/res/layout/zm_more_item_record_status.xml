<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRecordStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bottom_sheet_selector_round"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/zm_margin_small_size"
            android:background="@drawable/zm_btn_round_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/zm_padding_medium_size"
            android:paddingLeft="@dimen/zm_padding_medium_size">

            <ImageView
                android:id="@+id/imgRecording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:src="@drawable/zm_ic_cmr_recording" />

            <ProgressBar
                android:id="@+id/progressStartingRecord"
                style="@style/ZMProgressBar.Small"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtRecordStatus"
                style="@style/ZMTextView.Normal.OnDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zm_record_status_recording" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_marginRight="@dimen/zm_margin_medium_size"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        >

        <ImageView
            android:id="@+id/btn_pause_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/zm_record_btn_pause"
            android:focusable="false"
            android:src="@drawable/zm_record_btn_pause" />

        <ImageView
            android:id="@+id/btn_stop_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zm_margin_normal_size"
            android:contentDescription="@string/zm_record_btn_stop_record"
            android:focusable="false"
            android:src="@drawable/zm_record_btn_stop" />
    </LinearLayout>

</LinearLayout>
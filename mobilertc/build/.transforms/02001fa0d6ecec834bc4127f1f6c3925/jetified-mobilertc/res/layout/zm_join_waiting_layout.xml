<?xml version="1.0" encoding="utf-8"?>
<us.zoom.androidlib.widget.ZMDialogRootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:id="@+id/zmJoinLayout">
    <TextView
        android:id="@+id/joinTitle"
        style="@style/ZMTextView.Large.DialogTitle"
        android:paddingTop="@dimen/zm_padding_large_size"
        android:paddingBottom="@dimen/zm_padding_small_size"
        android:paddingLeft="@dimen/zm_padding_medium_size"
        android:paddingRight="@dimen/zm_padding_medium_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_divider_height"
        android:background="@color/zm_v2_dialog_divider"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/zm_v2_dialog_divider"
        >
        <Button
            android:id="@+id/joinLeftBtn"
            style="@style/ZMButton.Dialog"
            android:layout_width="0dp"
            android:padding="@dimen/zm_padding_medium_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            />
        <Button
            android:id="@+id/joinRightBtn"
            style="@style/ZMButton.Dialog"
            android:layout_width="0dp"
            android:padding="@dimen/zm_padding_medium_size"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/zm_divider_height"
            />
        </LinearLayout>
</us.zoom.androidlib.widget.ZMDialogRootLayout>

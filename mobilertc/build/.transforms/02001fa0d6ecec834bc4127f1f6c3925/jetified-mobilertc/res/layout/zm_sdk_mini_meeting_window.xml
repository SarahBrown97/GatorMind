<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/zm_transparent">

    <com.zipow.videobox.sdk.MinMeetingView
        android:id="@+id/bigVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />

    <TextView
        android:id="@+id/txtWaitingTitle"
        style="@style/ZMTextView.ExtremLarge.OnLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/zm_black"
        android:gravity="center"
        android:text="@string/zm_msg_waiting_meeting_nitification"
        android:textColor="@color/zm_white"
        android:textSize="@dimen/zm_ui_kit_text_size_11sp"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/shareItemContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/zm_annotation_popup_min_width"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_smart_recognition"
            style="@style/ZMTextView.AnnoMoreItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zm_settings_item_selector_onlight">

            <TextView
                style="@style/ZMTextView.AnnoMoreItemText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:text="@string/zm_anno_smart_recognition_46296" />

            <us.zoom.androidlib.widget.ZMCheckedTextView
                android:id="@+id/id_more_tip_shapeRecognition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checkMark="@drawable/zm_btn_toggle_default_onlight"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/zm_addon_action_bar_bg" />

        <!--Save-->
        <RelativeLayout
            android:id="@+id/item_save_white_board"
            style="@style/ZMTextView.AnnoMoreItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zm_settings_item_selector_onlight">

            <ImageView
                android:id="@+id/id_more_tip_save"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/zm_anno_save_to_photos_46296"
                android:src="@drawable/zm_anno_more_tip_save" />

            <TextView
                style="@style/ZMTextView.AnnoMoreItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/id_more_tip_save"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:text="@string/zm_anno_save_to_photos_46296" />
        </RelativeLayout>

        <View
            android:id="@+id/id_newWhiteboard_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/zm_addon_action_bar_bg" />

        <!--New Whiteboard-->
        <RelativeLayout
            android:id="@+id/item_new_white_board"
            style="@style/ZMTextView.AnnoMoreItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zm_settings_item_selector_onlight">

            <ImageView
                android:id="@+id/id_more_tip_create"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/zm_anno_new_whiteboard_46296"
                android:src="@drawable/zm_anno_more_tip_new_page" />

            <TextView
                style="@style/ZMTextView.AnnoMoreItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/id_more_tip_create"
                android:focusable="true"
                android:gravity="center_vertical"
                android:text="@string/zm_anno_new_whiteboard_46296" />
        </RelativeLayout>

        <View
            android:id="@+id/id_more_tip_view_all_wb_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/zm_addon_action_bar_bg" />

        <RelativeLayout
            android:id="@+id/item_view_all_white_board"
            style="@style/ZMTextView.AnnoMoreItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/zm_settings_item_selector_onlight">

            <FrameLayout
                android:id="@+id/id_more_tip_page_num_layout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zm_anno_more_tip_page_num">

                <TextView
                    android:id="@+id/id_more_tip_page_num"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="8sp"
                    android:textColor="@color/zm_v1_gray_2100"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/id_pageManagement"
                style="@style/ZMTextView.AnnoMoreItemText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/id_more_tip_page_num_layout"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:text="@string/zm_anno_view_all_whiteboards_46296" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
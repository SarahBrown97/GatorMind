<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZMTitleBar.Search.NoElevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/panelSearchBar"
            android:layout_alignBottom="@id/panelSearchBar"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/zm_ic_back_blue_normal"
                android:duplicateParentState="true"
                android:contentDescription="@string/zm_btn_back"
                />
        </RelativeLayout>
        <com.zipow.videobox.view.ZMSearchBar
            android:id="@+id/panelSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            zoom:editTextHint="@string/zm_hint_search_im_18680"
            android:layout_toRightOf="@id/btnBack"
            android:layout_marginRight="16dp"
            zoom:imeOptions="actionSearch"/>
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/zm_btn_normal_height"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:background="@color/zm_white"
            zoom:tabMode="scrollable"
            zoom:tabIndicatorHeight="0dp"
            zoom:tabIndicatorColor="@color/zm_transparent"
            zoom:tabBackground="@color/zm_transparent"
            zoom:tabRippleColor="@color/zm_transparent"
            zoom:tabTextAppearance="@color/zm_v2_txt_secondary"
            zoom:tabGravity="center"
            android:visibility="gone">
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/panel_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt_recent"
            android:background="@color/zm_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_btn_normal_height"
            android:paddingLeft="@dimen/zm_padding_normal"
            android:gravity="center_vertical"
            android:text="@string/zm_mm_search_global_recent_searches_121980"
            android:textSize="@dimen/zm_ui_kit_text_size_13sp"
            android:textStyle="bold"
            android:textColor="@color/zm_v2_txt_secondary" />

        <com.zipow.videobox.view.mm.MMRecentSearchesRecycleView
            android:id="@+id/recent_searches_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zm_white"
            android:paddingLeft="@dimen/zm_dialog_margin_16dp" />
    </LinearLayout>
    <com.zipow.videobox.view.mm.GestureScrollSearchView
        android:id="@+id/panel_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <us.zoom.androidlib.widget.ZMViewPager
            android:id="@+id/viewpager_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.zipow.videobox.view.mm.GestureScrollSearchView>

</LinearLayout>

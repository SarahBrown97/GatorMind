<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_ui_kit_page_left_padding"
        android:layout_marginRight="@dimen/zm_ui_kit_page_left_padding"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        style="@style/UIKitTextView.DialogTitle.17SP"
        tools:text="Title"
        android:gravity="center"
        android:id="@+id/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_ui_kit_page_left_padding"
        android:layout_marginRight="@dimen/zm_ui_kit_page_left_padding"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        style="@style/UIKitTextView.SecondaryText.Medium"
        tools:text="@string/zm_sip_blind_transfer_des_61381"
        android:gravity="center"
        android:id="@+id/msg"/>

    <View
        style="@style/ZMBlackLine"
        android:id="@+id/lineButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/UIKitTextView.LargeTitle.Clickable"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/btnOK"
        android:text="@string/zm_btn_ok"
        android:contentDescription="@string/zm_btn_ok"
        android:background="@drawable/zm_ui_kit_big_round_dialog_bottom_btn_transparent_selector"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/zm_sip_pop_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:background="@drawable/zm_sip_pop_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/UIKitTextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/zm_sip_call_hold_pop_text_82852"/>

        <Button
            android:id="@+id/btnOK"
            style="@style/UIKitTextView.Small.Bold.Blue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:background="@color/zm_transparent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/zm_btn_ok"/>

    </LinearLayout>

    <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/zm_sip_pop_triangle_with_stroke" />

</FrameLayout>
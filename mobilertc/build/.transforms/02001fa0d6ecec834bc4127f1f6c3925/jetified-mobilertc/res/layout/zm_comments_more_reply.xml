<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:importantForAccessibility="no"
    android:gravity="center_vertical"
    android:paddingTop="1dp"
    android:paddingEnd="5dp"
    android:id="@+id/panelMoreReply"
    android:layout_height="match_parent">

    <TextView
        android:importantForAccessibility="no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        style="@style/UIKitTextView.SecondaryText.Small.Blue"
        android:id="@+id/more_reply"/>

    <TextView
        android:importantForAccessibility="no"
        android:id="@+id/txtDraft"
        style="@style/UIKitTextView.SecondaryText.Small.warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:text="@string/zm_lbl_draft_88133"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:importantForAccessibility="no"
        android:id="@+id/imgErrorMessage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/zm_error_message"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/zm_msg_delivery_error_70196"
        android:visibility="gone"/>

    <TextView
        android:importantForAccessibility="no"
        android:id="@+id/txtMarkUnread"
        style="@style/ZMTextView.UnreadMessageCount.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:visibility="gone"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical|center_horizontal" />
    <!--
    <TextView
        android:id="@+id/txtMarkUnread"
        style="@style/UIKitTextView.SecondaryText.Small.warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="4dp"
        android:visibility="gone" />
    -->
    <TextView
        android:importantForAccessibility="no"
        android:id="@+id/txtAtMe"
        style="@style/UIKitTextView.SecondaryText.Small.warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="4dp"
        android:visibility="gone" />

    <TextView
        android:importantForAccessibility="no"
        android:id="@+id/txtAtAll"
        style="@style/UIKitTextView.SecondaryText.Small.warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:layout_marginStart="4dp"/>

    <View
        android:importantForAccessibility="no"
        android:id="@+id/unreadBubble"
        android:background="@drawable/zm_ic_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:duplicateParentState="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:text="" />

    <ImageView
        android:importantForAccessibility="no"
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:paddingTop="4dp"
        android:src="@drawable/zm_more_replies"
        android:visibility="gone"
        />
</LinearLayout>
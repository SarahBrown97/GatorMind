<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioGroup
        android:id="@+id/zmRadioGroupDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radioZoomLeftDomain"
            style="@style/ZMRadioButton.Normal.OnLight"
            android:button="@null"
            android:drawableLeft="@drawable/zm_btn_radio"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/zm_ui_kit_text_size_14sp"
            android:drawablePadding="4dp"
            />
        <RadioButton
            android:id="@+id/radioZoomRightDomain"
            style="@style/ZMRadioButton.Normal.OnLight"
            android:textSize="@dimen/zm_ui_kit_text_size_14sp"
            android:layout_marginLeft="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:drawablePadding="4dp"
            android:button="@null"
            android:drawableLeft="@drawable/zm_btn_radio"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

</LinearLayout>
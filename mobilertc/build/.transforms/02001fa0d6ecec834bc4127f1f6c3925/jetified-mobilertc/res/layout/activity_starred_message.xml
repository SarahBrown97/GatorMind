<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zm_white"
    tools:context="com.zipow.videobox.StarredMessageActivity">

    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZMTitleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_pt_titlebar_height"
        zoom:zm_leftButton="@+id/zm_starred_message_title_back_btn"
        zoom:zm_rightButton="@+id/viewRight"
        zoom:zm_title="@+id/txtTitle" >

        <ImageView
            android:id="@+id/zm_starred_message_title_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            style="@style/ZMBackButton"
            android:contentDescription="@string/zm_btn_back"
            android:padding="8dp" />

        <LinearLayout
            android:id="@+id/viewRight"
            android:gravity="right"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

        <us.zoom.androidlib.widget.ZMDynTextSizeTextView
            android:id="@+id/txtTitle"
            style="@style/ZMTextView.Title"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/zm_mme_starred_message_title_name_65147" />
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zm_starred_message_fragment_container">

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/zm_sip_pop_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:background="@drawable/zm_sip_pop_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/UIKitTextView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="message"
            android:textSize="@dimen/zm_ui_kit_text_size_14sp" />

        <Button
            android:id="@+id/btnOK"
            style="@style/UIKitTextView.Small.Bold.Blue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:background="@color/zm_transparent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/zm_btn_ok" />

    </LinearLayout>

    <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="top|end"
        android:background="@drawable/zm_sip_pop_triangle_with_stroke" />

</FrameLayout>
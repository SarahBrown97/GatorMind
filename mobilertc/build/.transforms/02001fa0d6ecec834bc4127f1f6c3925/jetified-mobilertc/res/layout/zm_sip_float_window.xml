<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/zm_sip_float_window_width"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/zm_transparent"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zm_sip_float_window_bkg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="yes"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBackgroundState"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="-20dp"
            android:scaleType="centerInside"
            android:src="@drawable/zm_sip_icon_pbx_inbackground"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivUIState"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:scaleType="centerInside"
            android:src="@drawable/zm_ic_meeting_blue" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:text="@string/zm_sip_call_calling_503"
            android:textColor="@color/zm_v2_blue_text_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivMeetingNoAudio"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-24dp"
            android:layout_marginBottom="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/zm_ic_inmeeting_no_audio"
            android:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
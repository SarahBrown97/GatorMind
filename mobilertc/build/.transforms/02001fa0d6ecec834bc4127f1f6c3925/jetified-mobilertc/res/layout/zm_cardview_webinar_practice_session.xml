<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/zm_v2_webinar_cardview_bg"
    app:cardCornerRadius="@dimen/zm_radius_medium"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/zm_margin_medium_size"
    android:layout_marginRight="@dimen/zm_margin_medium_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/UIKitTextView.PrimaryText.Normal.Alpha80White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/zm_view_larger_height"
            android:focusable="true"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/zm_font_line_space_smallest_size"
            android:layout_marginRight="@dimen/zm_dialog_margin_16dp"
            android:layout_marginLeft="@dimen/zm_dialog_margin_16dp"
            android:text="@string/zm_content_webinar_practice_mode_166792" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_divider_height"
            android:background="@color/zm_v2_webinar_cardview_divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_btn_large_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zmBtnStartWebinar"
                style="@style/UIKitTextView.PrimaryText.Normal.LightWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/zm_font_line_space_small_size"
                android:text="@string/zm_btn_start_webinar_166972"
                />
            <ProgressBar
                style="@style/ZMProgressBar.Small"
                android:id="@+id/progressBarBroadcasting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:focusable="false"
                android:visibility="gone"
                 />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

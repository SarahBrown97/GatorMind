<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="48dp">
        <TextView
            android:id="@+id/txtLabel"
            style="@style/UIKitTextView.BuddyName.Bold.Blue.Selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Name"/>

        <TextView
            android:id="@+id/txtSubLabel"
            style="@style/UIKitTextView.PrimaryText.Normal.Gray.Selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="(+86)88888"
            android:textSize="@dimen/zm_ui_kit_text_size_13sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/zm_group_type_select"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/zm_accessibility_icon_item_selected_19247"
        android:id="@+id/ivSelect"
        android:visibility="visible"
        />
</RelativeLayout>
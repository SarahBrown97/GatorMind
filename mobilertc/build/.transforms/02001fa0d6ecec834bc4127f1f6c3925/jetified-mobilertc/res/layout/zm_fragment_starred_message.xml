<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/zm_fragment_starred_message_listView"
            android:divider="@drawable/zm_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
        <LinearLayout
            android:id="@+id/zm_fragment_starred_message_emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/zm_white"
            android:visibility="gone"
            android:gravity="center">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="13dp"
                 android:textColor="@color/zm_v2_txt_secondary"
                 android:text="@string/zm_mm_starred_message_empty_owp40"
                 />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
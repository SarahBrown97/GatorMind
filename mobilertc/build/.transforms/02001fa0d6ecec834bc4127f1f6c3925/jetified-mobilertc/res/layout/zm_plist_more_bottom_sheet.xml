<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zm_bottom_sheet_round_rect_bg">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/askToUnmute"
            style="@style/ZMTextView.BottomSheetItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_bottom_sheet_item_height"
            android:background="@drawable/zm_bottom_sheet_selector_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/zm_button_ask_unmute_all_163690"/>

        <TextView
            android:id="@+id/report"
            style="@style/ZMTextView.BottomSheetItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_bottom_sheet_item_height"
            android:background="@drawable/zm_bottom_sheet_selector_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/zm_btn_report_147675"/>

        <TextView
            android:id="@+id/clearAllFeedback"
            style="@style/ZMTextView.BottomSheetItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zm_bottom_sheet_item_height"
            android:background="@drawable/zm_bottom_sheet_selector_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/zm_button_clear_all_feedback_163690"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

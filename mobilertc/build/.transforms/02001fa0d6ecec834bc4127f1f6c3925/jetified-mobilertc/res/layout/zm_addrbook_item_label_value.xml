<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="32dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/zm_list_selector_half_transparent_background"
        android:orientation="horizontal" >

        <TextView
            style="@style/UIKitTextView.PrimaryText.Normal.Dimmed"
            android:layout_width="@dimen/zm_addrbook_item_details_item_label_width"
            android:layout_height="wrap_content"
            android:id="@+id/label"
            android:text="Phone Number"/>

        <TextView
            android:id="@+id/value"
            style="@style/UIKitTextView.PrimaryText.Normal"
            android:layout_marginLeft="@dimen/zm_addrbook_item_details_item_margin_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+86 18947158836"/>
    </LinearLayout>
</LinearLayout>
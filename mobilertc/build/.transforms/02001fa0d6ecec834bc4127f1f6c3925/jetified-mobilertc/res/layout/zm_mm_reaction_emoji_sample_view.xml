<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/zm_white"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji5"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/emoji6"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/zm_ui_kit_color_black_232333"
                    android:background="@drawable/zm_btn_reaction_emoji_sample"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/btn_more"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:contentDescription="@string/zm_accessibility_more_reaction_88133"
                    android:src="@drawable/zm_ic_reaction_more_action" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

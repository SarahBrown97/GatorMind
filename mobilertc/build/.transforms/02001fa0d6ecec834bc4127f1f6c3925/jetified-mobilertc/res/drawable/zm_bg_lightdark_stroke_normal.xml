<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/zm_margin_smallest" />
            <solid android:color="@color/zm_v2_light_bg_ondark" />
            <stroke android:width="@dimen/zm_dimen_stroke_smallest" android:color="@color/zm_half_translucent_white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/zm_margin_smallest" />
            <solid android:color="@color/zm_v2_light_bg_ondark" />
            <stroke android:width="@dimen/zm_dimen_stroke_smallest" android:color="@color/zm_half_translucent_white" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/zm_margin_smallest" />
            <solid android:color="@null" />
            <stroke android:width="@dimen/zm_dimen_stroke_smallest" android:color="@color/zm_half_translucent_white" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle"
            >
            <stroke android:color="@color/zm_line_divider" android:width="1dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="6dp" android:bottom="6dp"/>
            <corners android:radius="8dp" />
            <solid android:color="@color/zm_transparent"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/zm_line_divider" android:width="1dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="6dp" android:bottom="6dp"/>
            <corners android:radius="8dp" />
            <solid android:color="@color/zm_btn_light_pressed"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <stroke android:color="@color/zm_line_divider" android:width="1dp"/>
            <padding android:left="10dp" android:right="10dp" android:top="6dp" android:bottom="6dp"/>
            <corners android:radius="8dp" />
            <solid android:color="@color/zm_transparent"/>
        </shape>
    </item>

</selector>
